{
  "name": "app",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.3",
    "esbuild": "^0.20.1"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:opal": "opal -Igame/ -c game/client.rb -o app/assets/builds/game.js --watch game --map app/assets/builds/game.map --enable-source-location"
  }
}
